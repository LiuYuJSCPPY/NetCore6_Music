@using Microsoft.AspNetCore.Identity
@using Core6Music.Web.Models

@inject SignInManager<MusicUser> SignInManager
@inject UserManager<MusicUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
        
        <li class="nav-item">
            <a class="nav-link text-dark"  asp-controller="MusicUser" asp-action="CreatePlayList" title="Manage">建立播放清單</a>
        </li>
          <li class="nav-item">
            <a class="nav-link text-dark"  asp-controller="MusicUser" asp-action="AllPlayList" title="Manage">你的音樂庫</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
