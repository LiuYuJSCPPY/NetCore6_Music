@model Core6Music.Web.Areas.Dashboard.ViewModels.EditAlbumViewModels
@using Core6Music.Web.DateContext.Enum;
@{
    ViewData["Title"] = "Edit";
    string Path = "~/Image/Album/";
}

<h1>Edit</h1>

<h4>Album</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
           

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
               <img src="@(Path + Model.ImageName)" asp-append-version="true"/>
                <input asp-for="Image" type="file" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="albumCategory" class="control-label"></label>
                <select asp-for="albumCategory" class="form-control" asp-items="Html.GetEnumSelectList<AlbumCategory>()"></select>
                <span asp-validation-for="albumCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
